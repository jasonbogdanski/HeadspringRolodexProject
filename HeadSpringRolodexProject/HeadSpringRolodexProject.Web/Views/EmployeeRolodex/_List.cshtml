            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HomePhoneNumber.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MobilePhoneNumber.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OtherPhoneNumber.Number)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  employeeId=item.EmployeeId  }) |
            @Html.ActionLink("Details", "Details", new { employeeId = item.EmployeeId }) |
            @Html.ActionLink("Delete", "Delete", new { employeeId = item.EmployeeId })
        </td>
    </tr>
}

</table>
